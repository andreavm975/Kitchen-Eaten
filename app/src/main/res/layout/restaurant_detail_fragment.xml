<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_layout_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".fragments.RestaurantDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivRestaurantDetail"
                    android:layout_width="match_parent"

                    android:layout_height="200dp"
                    android:layout_marginTop="0dp"
                    android:contentDescription="@string/restaurant_image"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/earthquest"
                    android:textAllCaps="false"
                    android:textColor="#4B4B4B"
                    android:textSize="48sp"
                    tools:text="Name" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/futura"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut ac iaculis purus. Phasellus elit tellus, fermentum vel vestibulum ac, fringilla vel tortor. Proin malesuada volutpat massa quis luctus. Quisque pellentesque diam quis faucibus convallis. Nulla felis ex, lobortis eu ipsum ut, ornare dictum lacus. Fusce orci felis, ultrices ut efficitur a, egestas et tellus. Morbi finibus tempus massa, vel consectetur lacus ullamcorper nec. Duis vitae sapien justo. Vestibulum ante ipsum primis in faucibus orci luctus et ultrices posuere cubilia Curae;  Aliquam vulputate blandit est sed tempor. Maecenas tristique, metus a fermentum vestibulum, nisl mauris rhoncus turpis, id rhoncus felis ligula ac elit. Etiam vitae bibendum nulla. Donec sed dignissim risus. Nam volutpat ante sit amet sapien egestas, quis pellentesque lacus pretium. Sed euismod et ex nec posuere. Aliquam a suscipit ex. Quisque fermentum fringilla condimentum. Orci varius natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. Curabitur pulvinar dapibus orci, ac posuere tortor ultrices eget. Quisque egestas dignissim risus, eu feugiat enim ultrices aliquam. Sed tortor magna, consequat quis convallis at, congue eget dui. Curabitur id elit bibendum, feugiat dolor in, faucibus velit. Donec eget felis consequat, luctus libero imperdiet, ultricies augue. Vestibulum suscipit imperdiet enim eget lobortis."
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Description" />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/futura"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Address" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/futura"
                    android:text="@string/telephone" />

                <TextView
                    android:id="@+id/tvTelf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/futura"
                    android:textStyle="bold"
                    tools:text="Telephone" />

                <TextView
                    android:id="@+id/tvDisponibility"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/futura"
                    android:textStyle="bold"
                    tools:text="Disponibility" />
            </LinearLayout>
        </ScrollView>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btnReservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#53BBAD"
            android:fontFamily="@font/futura"
            android:text="@string/table_reservation"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>